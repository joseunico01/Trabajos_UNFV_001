    <servlet-mapping>
        <servlet-name>CalzadoControlador</servlet-name>
        <url-pattern>/CalzadoControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaControlador</servlet-name>
        <url-pattern>/CategoriaControlador</url-pattern>
